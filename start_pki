#!/bin/sh
set -a
. ./root.env
. ./intermediate.env
set +a
mkdir -p $ROOTCA_DIRECTORY
./create_root_ca
mkdir -p $INTERMEDIATECA_DIRECTORY
./create_intermediate_ca
./sign_root_ca $INTERMEDIATECA_DIRECTORY/csr/intermediate.csr.pem $INTERMEDIATECA_DIRECTORY/certs/intermediate.cert.pem $INTERMEDIATECA_DIRECTORY/certs/ca-chain.cert.pem
./generate_crl
./issue_key_cert ocsp.patriciolatini.com ocsp 4096
./issue_key_cert www.patriciolatini.com server_cert 2048
